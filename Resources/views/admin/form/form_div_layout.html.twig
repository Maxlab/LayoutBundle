{% use "bootstrap_3_layout.html.twig" %}

{# Widgets #}
{%- block form_widget -%}
    {{- parent() -}}

    {{- block('form_help') -}}
{%- endblock form_widget -%}

{% block form_widget_simple -%}
	{% if icon is defined and icon is not null %}
		<div class="input-group">
	    	{{- parent() -}}
	    	<span class="input-group-addon">
	    		<i class="fa fa-{{ icon }}"></i>
	    	</span>
	    </div>
	{% else %}
		{{- parent() -}}
	{% endif %}
{%- endblock form_widget_simple %}

{%- block textarea_widget -%}
    {{- parent() -}}

    {{- block('form_help') -}}
{%- endblock textarea_widget -%}

{%- block checkbox_widget -%}
    {{- parent() -}}

    {{- block('form_help') -}}
{%- endblock checkbox_widget %}

{%- block email_widget -%}
	{{- parent() -}}

	{{- block('form_help') -}}
{%- endblock email_widget -%}

{%- block datetime_widget -%}
    {% if widget == 'single_text' and datepicker is same as(true) %}
    	<div class="clearfix"></div>

	    <div class="input-group datetime-input" data-input-id="{{ form.vars.id }}">
	        <span class="form-control">{{ 'select_date'|trans }}</span>
	        <span class="input-group-addon">
	    		<i class="fa fa-calendar"></i>
	    	</span>
	    </div>

	    <div class="hide">
			{{- parent() -}}
		</div>
    {% else %}
    	{{- parent() -}}
	{% endif %}

	{{- block('form_help') -}}
{%- endblock datetime_widget -%}

{%- block form_help -%}
    {% if help is defined and help is not null %}
    	<div class="clearfix"></div>

		<p class="help-block">{{ help|trans }}</p>
	{% endif %}
{%- endblock form_help -%}